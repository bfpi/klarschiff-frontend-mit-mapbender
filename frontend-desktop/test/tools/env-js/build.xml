    <echo message="         'RHINO_DIST':   '${RHINO_DIST}',"/> 
    <echo message="         'CONSOLE_DIST': '${CONSOLE_DIST}'"/> 
    <echo message="         'DOM_DIST':     '${DOM_DIST}'"/> 
    <echo message="         'EVENT_DIST':   '${EVENT_DIST}',"/> 
