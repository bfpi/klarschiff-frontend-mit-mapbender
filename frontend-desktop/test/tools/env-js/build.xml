            <filterchain>    
                <replacetokens>
                    <token key="VERSION" value="core-env.${BUILD_VERSION}"/>
                </replacetokens>
            </filterchain>
            <fileset dir="${SRC_DIR}" includes="platform/core/__global__.js" />
